<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView android:layout_width="200dp" android:layout_height="wrap_content"
              android:textStyle="bold"
              android:gravity="center"
              android:text="Please login to continue"
              android:fontFamily="@font/sue_ellen_francisco"
              android:textSize="24dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
              app:layout_constraintHorizontal_bias="0.497" android:id="@+id/textView8"/>
    <EditText
            android:drawableLeft="@drawable/ic_action_username"
            android:id="@+id/username"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            app:layout_constraintWidth_percent=".8"
            android:hint="Username"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.253"/>
    <EditText
            android:drawableLeft="@drawable/ic_password"
            android:id="@+id/password"
            android:layout_width="0dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias=".5"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username"
    />

    <Button
            android:id="@+id/loginButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".8"
            android:background="@drawable/custom_button_bg"
            android:text="Login"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.3"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_fb"
            android:src="@drawable/fb"
            android:elevation="35dp"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/loginButton" app:layout_constraintVertical_bias="0.446"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_gg"
            android:src="@drawable/gg"
            android:elevation="35dp"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            app:layout_constraintEnd_toStartOf="@+id/fab_fb" app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintVertical_bias="0.446"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_phone"
            android:src="@drawable/phone_fab"
            android:elevation="35dp"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            app:layout_constraintStart_toEndOf="@+id/fab_fb"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintVertical_bias="0.446"/>
</androidx.constraintlayout.widget.ConstraintLayout>