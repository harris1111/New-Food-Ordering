<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView android:layout_width="150dp"
               android:layout_height="150dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               android:id="@+id/orderdItemImg" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="name"
            android:layout_width="137dp"
            android:layout_height="32dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:id="@+id/ordered_item_name"
            android:paddingLeft="10dp"
            app:layout_constraintStart_toEndOf="@+id/orderdItemImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            android:fontFamily="@font/aladin" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Total: "
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Orderedtotal"
            app:layout_constraintStart_toEndOf="@+id/orderdItemImg"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.004" app:layout_constraintTop_toBottomOf="@+id/Orderedamount"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="Amount: "
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Orderedamount"
            app:layout_constraintStart_toEndOf="@+id/orderdItemImg" android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/ordered_item_name" android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>