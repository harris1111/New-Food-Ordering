<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:background="@drawable/background_profile_activity"
                                                   android:layout_height="match_parent"
tools:context=".Profile">

    <RelativeLayout
            android:layout_width="409dp"
            android:layout_height="60dp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/relativeLayout2">

        <ImageView
                android:layout_width="35dp"
                android:layout_height="33dp"
                app:srcCompat="@drawable/ic_action_backarrow"
                android:id="@+id/profile_backtomain"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                tools:ignore="VectorDrawableCompat"/>
        <TextView
                android:text="Account Information"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:fontFamily="@font/aladin"/>
    </RelativeLayout>
    <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:id="@+id/view"
            android:background="@color/white_blue"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile_pic"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/black"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:id="@+id/view2"
            android:background="@color/white_blue"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/profile_name"
            android:layout_marginTop="30dp"/>
    <TextView
            android:text="JasonKoi"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:fontFamily="@font/aclonica"/>
    <ImageView
            android:layout_width="33dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_action_profile_name"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.041"
            android:id="@+id/profile_name_view"/>
    <ImageView
            android:layout_width="33dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_action_profile_email"
            app:layout_constraintTop_toBottomOf="@+id/profile_name_view"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            android:id="@+id/profile_email_view"/>
    <TextView
            android:id="@+id/profile_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Full name:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/profile_name_view"
            app:layout_constraintHorizontal_bias="0.0" android:fontFamily="@font/alice"/>
    <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Email:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="296dp" android:layout_marginRight="296dp" android:fontFamily="@font/alice"
            app:layout_constraintTop_toBottomOf="@+id/profile_fullname" android:layout_marginTop="52dp"/>
    <View
            android:layout_width="370dp"
            android:layout_height="0.5dp"
            android:id="@+id/view3"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/profile_fullname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.609"/>

    <View
            android:layout_width="370dp"
            android:layout_height="0.5dp"
            android:id="@+id/view4"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.609" app:layout_constraintTop_toBottomOf="@+id/view3"
            android:layout_marginTop="80dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/profile_phone"
              android:text="Phone:"
              android:textSize="20dp"
              android:textStyle="bold"
              android:textColor="@color/black"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="296dp" android:layout_marginRight="296dp"
              app:layout_constraintTop_toBottomOf="@+id/profile_email" android:layout_marginTop="52dp"
              android:fontFamily="@font/alice"/>
    <ImageView
            android:layout_width="33dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_profile_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            android:id="@+id/profile_phone_view" app:layout_constraintTop_toBottomOf="@+id/profile_email_view"
            android:layout_marginTop="50dp"/>

    <View
            android:layout_width="370dp"
            android:layout_height="0.5dp"
            android:id="@+id/view5"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.609" app:layout_constraintTop_toBottomOf="@+id/view4"
            android:layout_marginTop="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>