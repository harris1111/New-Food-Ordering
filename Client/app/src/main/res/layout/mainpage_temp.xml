<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <EditText
            android:id="@+id/device_location"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Device location"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.016"/>
    <EditText android:layout_width="100dp" android:layout_height="wrap_content"
              android:text="Sort by"
              android:textColor="#CFCACA"
              android:drawableLeft="@drawable/sort"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/device_location"
              app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="220dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/device_location"
            android:layout_marginTop="28dp" android:padding="10dp" android:id="@+id/linearLayout">
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/cardview_bg"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:srcCompat="@drawable/tcf1"
                        android:id="@+id/imageView1"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"/>
                <TextView
                        android:text="The Coffee House Distric 7"
                        android:fontFamily="@font/sue_ellen_francisco"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/res_name1"
                        android:layout_below="@id/imageView1" android:layout_marginTop="1dp"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/cardview_bg"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp" app:srcCompat="@drawable/tcf2"
                        android:id="@+id/imageView2" android:layout_marginTop="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"/>
                <TextView
                        android:text="The Coffee House Distric 2"
                        android:fontFamily="@font/sue_ellen_francisco"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/res_name2"
                        android:layout_below="@id/imageView2" android:layout_marginTop="1dp"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="220dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:padding="10dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginTop="20dp">
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/cardview_bg"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp" app:srcCompat="@drawable/tcf3"
                        android:id="@+id/imageView3" android:layout_marginTop="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"/>
                <TextView
                        android:text="The Coffee House Distric 1"
                        android:fontFamily="@font/sue_ellen_francisco"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/res_name3"
                        android:layout_below="@id/imageView3" android:layout_marginTop="1dp"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/cardview_bg"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp" app:srcCompat="@drawable/tcf4"
                        android:id="@+id/imageView4" android:layout_marginTop="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"/>
                <TextView
                        android:text="The Coffee House Distric BThanh"
                        android:fontFamily="@font/sue_ellen_francisco"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/res_name4"
                        android:layout_below="@id/imageView4" android:layout_marginTop="1dp"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>